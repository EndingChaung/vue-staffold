html,
body
  margin: 0
  height: 100%

p, h1, h2, h3, h4, h5, h6, ul
  line-height 1.4
  margin 0
  padding 0
ul
  list-style: none
a:hover
  text-decoration: none

.font-10
  font-size 10px
.font-12
  font-size 12px
.font-14
  font-size 14px
.font-16
  font-size 16px
.font-18
  font-size 18px

.text-gray
  color: #8a8a8a !important
.text-red
  color: #e50114 !important
.text-black
  color: #212121 !important

.text-right
  text-align right
.text-center
  text-align center

.float-left
  float left
.float-right
  float right

.clearfix
  overflow auto
  zoom 1

// text ellipsis
.signle-line
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
mutiple-line(n)
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: n
  overflow: hidden
.two-line
  mutiple-line(2)
.three-line
  mutiple-line(3)

// init btn
.btn
  border none
  outline none
  margin 0
  padding 0
  background none
